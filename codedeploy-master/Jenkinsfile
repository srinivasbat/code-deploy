pipeline {
    agent {
        label 'jenkins-slave'
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/srinivasbat/code-deploy.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'cd code-deploy'
                sh 'npm install'
            }
        }

        stage('Build and Deploy') {
            steps {
                sh 'cp code-deploy/index.html /var/www/html/'
                sh 'cp code-deploy/bad.jpg /var/www/html/'
                sh 'cp code-deploy/badminton.jpg /var/www/html/'
                sh 'cp code-deploy/circket.jpg /var/www/html/'
                sh 'cp code-deploy/css.jpg /var/www/html/'
                sh 'cp code-deploy/map.jpg /var/www/html/'
                sh 'cp code-deploy/snooker.jpg /var/www/html/'
                sh 'cp code-deploy/tennis.jpg /var/www/html/'
                sh 'cp code-deploy/ton.jpg /var/www/html/'
                sh 'cp code-deploy/touch.jpg /var/www/html/'
            }
        }

        stage('After Deployment') {
            steps {
                sh 'chmod +x code-deploy/scripts/start_server'
                sh 'code-deploy/scripts/start_server'
            }
        }
    }
}
